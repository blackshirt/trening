CREATE TABLE IF NOT EXIST `opd` (
	`id` INTEGER AUTO_INCREMENT,
	`name` VARCHAR UNIQUE,
	`long_name` VARCHAR UNIQUE,
	`road` VARCHAR NOT NULL,
	`number` VARCHAR NOT NULL,
	`city` VARCHAR NOT NULL,
	`province` VARCHAR NOT NULL,

	PRIMARY KEY (`id`)
) ENGINE = INNODB;

CREATE TABLE IF NOT EXIST `asn` (
	`id` INTEGER NOT NULL AUTO_INCREMENT,
	`nip` VARCHAR NOT NULL UNIQUE,
	`name` VARCHAR NOT NULL,
	`current_job` VARCHAR NOT NULL 
	`current_grade` VARCHAR NOT NULL,
	`current_places` INTEGER NOT NULL,

	PRIMARY KEY (`id`, `nip`),
	FOREIGN KEY (`current_places`) REFERENCES `opd`(`id`)
) ENGINE = INNODB;

CREATE TABLE IF NOT EXIST `organisasi` (
	`id` INTEGER NOT NULL AUTO_INCREMENT,
	`name` VARCHAR UNIQUE,
	`long_name` VARCHAR UNIQUE,
	`road` VARCHAR NOT NULL
	`number` VARCHAR NOT NULL,
	`city` VARCHAR NOT NULL,
	`province` VARCHAR NOT NULL,

	PRIMARY KEY (`id`)
) ENGINE = INNODB;


CREATE TABLE IF NOT EXIST `trainix_master` (
	`id` INTEGER NOT NULL AUTO_INCREMENT,
	`name` VARCHAR NOT NULL,
	`description` VARCHAR NOT NULL,
	`start` DATE NOT NULL DEFAULT 0000-00-00,
	`finish` DATE NOT NULL DEFAULT 0000-00-00,

  PRIMARY KEY (`id`)
) ENGINE = INNODB;

CREATE TABLE IF NOT EXIST `trainix_asn` (
  `id` INTEGER NOT NULL AUTO_INCREMENT,
  `trainix` INTEGER NOT NULL,
  `asn` INTEGER NOT NULL,
  `location` INTEGER NOT NULL,
	`organizer` INTEGER NOT NULL,

	PRIMARY KEY (`id`),
	FOREIGN KEY (`trainix`) REFERENCES `trainix`(`id`),
	FOREIGN KEY (`asn`) REFERENCES `asn`(`id`),
	FOREIGN KEY (`location`) REFERENCES `organisasi`(`id`),
	FOREIGN KEY (`organizer`) REFERENCES `organisasi`(`id`)
) ENGINE = INNODB;

